<!-- views/endpoints.ejs -->
<!doctype html>
<html>
<% include ./partials/head %>
<body>
<div class="container">
    <header>
      <% include ./partials/header %>
    </header>
    <!-- show any flash messages that come back -->

    <div class="col-sm-6 col-sm-offset-3">
        <h2><span class="fa fa-server"></span> Endpoint</h2>

        <!-- ENDPOINT VIEW FORM -->
        <form>
          <div class="form-group">
              <label>ID</label>
              <input type="text" class="form-control" name="name" value="<%= endpoint._id %>" readonly>
          </div>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value="<%= endpoint.name %>" readonly>
            </div>
            <div class="form-group">
                <label>Type</label>
                <input type="text" class="form-control" name="type" value="<%= endpoint.type %>" readonly>
            </div>
            <div class="form-group">
                <label>baseToken</label>
                <input type="textarea" class="form-control" name="type" value="<%= endpoint.tokens.baseToken %>" readonly>
            </div>
            <div class="form-group">
                <label>remoteToken</label>
                <input type="textarea" class="form-control" name="type" value="<%= endpoint.tokens.remoteToken %>" readonly>
            </div>
            <a class="btn btn-lg btn-info" href="/endpoints"><i class="fa fa-chevron-left"></i> Back</a> &nbsp;&nbsp;<a class="btn btn-lg btn-success" href="/endpoints/edit/<%= endpoint._id %>"><i class="fa fa-edit"></i> Edit</a>

        </form>
    </div>

</div>
</body>
</html>
